html, body, div, block
   height 100%

body
  background url('http://i.imgur.com/Qnuk59u.jpg') no-repeat center center fixed
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover

.bodybag
  background-image -moz-linear-gradient(45deg, #2B3856 25%, transparent 25%),
        -moz-linear-gradient(-45deg, #2B3856 25%, transparent 25%),
        -moz-linear-gradient(45deg, transparent 75%, #2B3856 75%),
        -moz-linear-gradient(-45deg, transparent 75%, #2B3856 75%)
  background-image -webkit-gradient(linear, 0 100%, 100% 0, color-stop(.25, #2B3856), color-stop(.25, transparent)),
        -webkit-gradient(linear, 0 0, 100% 100%, color-stop(.25, #2B3856), color-stop(.25, transparent)),
        -webkit-gradient(linear, 0 100%, 100% 0, color-stop(.75, transparent), color-stop(.75, #2B3856)),
        -webkit-gradient(linear, 0 0, 100% 100%, color-stop(.75, transparent), color-stop(.75, #2B3856))
  background-image -webkit-linear-gradient(45deg, #2B3856 25%, transparent 25%),
        -webkit-linear-gradient(-45deg, #2B3856 25%, transparent 25%),
        -webkit-linear-gradient(45deg, transparent 75%, #2B3856 75%),
        -webkit-linear-gradient(-45deg, transparent 75%, #2B3856 75%)
  background-image -o-linear-gradient(45deg, #2B3856 25%, transparent 25%),
        -o-linear-gradient(-45deg, #2B3856 25%, transparent 25%),
        -o-linear-gradient(45deg, transparent 75%, #2B3856 75%),
        -o-linear-gradient(-45deg, transparent 75%, #2B3856 75%)
  background-image linear-gradient(45deg, #2B3856 25%, transparent 25%),
        linear-gradient(-45deg, #2B3856 25%, transparent 25%),
        linear-gradient(45deg, transparent 75%, #2B3856 75%),
        linear-gradient(-45deg, transparent 75%, #2B3856 75%)
  -moz-background-size 2px 2px
  background-size 2px 2px
  -webkit-background-size 2px 2.1px
  background-position 0 0, 1px 0, 1px -1px, 0px 1px

