#!/usr/bin/env node

var sendgrid   = require('sendgrid')(process.env.SENDGRID_KEY);

sendgrid.send({
    to:       'addison.shaw@cerner.com',
    from:     'Dave Shaw <dave.shaw@cerner.com>',
    subject:  'Hey Bro',
    text:     'Wanna lyft at da gym?'
 }, function(err, json) {
       if (err) { return console.error(err); }
          console.log(json);
 });